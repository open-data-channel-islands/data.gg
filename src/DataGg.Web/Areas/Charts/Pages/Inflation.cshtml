@page "/Charts/Inflation"
@using DataGg.Core.Guernsey.Inflation
@using Highsoft.Web.Mvc.Charts
@model DataGg.Web.Areas.Charts.Pages.Inflation
@{
    ViewData["Title"] = "Inflation";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="changes-tab" data-toggle="tab" href="#changes" role="tab" aria-controls="changes" aria-selected="true">Changes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="rpi-tab" data-toggle="tab" href="#rpi" role="tab" aria-controls="rpi" aria-selected="false">RPI</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="changes" role="tabpanel" aria-labelledby="changes-tab">
        @await Component.InvokeAsync("GenericAreaChart", new
        {
            id = "chartChanges", Title = "Cumulative RPI Changes Quarterly", YAxisLabel = "% Change",
            Type = typeof(Changes), GroupName = ""
        })
    </div>

    <div class="tab-pane" id="rpi" role="tabpanel" aria-labelledby="rpi-tab">
        @await Component.InvokeAsync("GroupChangesAreaChart", new { })
    </div>
</div>