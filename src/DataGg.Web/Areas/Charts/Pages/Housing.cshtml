@page "/Charts/Housing"

@model DataGg.Web.Areas.Charts.Pages.Housing
@{
}

<!-- Nav tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="mean-avg-tab" data-toggle="tab" href="#mean-avg" role="tab" aria-controls="mean-avg" aria-selected="true">Mean Average</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="transactions-tab" data-toggle="tab" href="#transactions" role="tab" aria-controls="transactions" aria-selected="false">Transactions</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="mean-avg" role="tabpanel" aria-labelledby="mean-avg-tab">
        @await Component.InvokeAsync("HousingMeanAvgChart", new { })
    </div>
    <div class="tab-pane" id="transactions" role="tabpanel" aria-labelledby="transactions-tab">
        @await Component.InvokeAsync("HousingTransactionsChart", new { })
    </div>
</div>